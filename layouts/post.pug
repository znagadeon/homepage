doctype html
html(lang="ko")
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title= `${title} - ${_config.blogName}`
    body
        div
            span category
            span #{category}
        h1 #{title}
        div
            span published
            time #{published}
        article
            main !{_body}
        div
            span tags
            ul
                each val in tags
                    li #{val}
